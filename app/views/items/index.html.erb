<% provide(:title, "投稿一覧") %>
<h1>投稿一覧</h1>
<%= link_to '新規投稿', new_item_path %>

<ul>
  <% @items.each do |item| %>
  <li>
    <p><%= item.description %></p>
    <% item.images.each do |image| %>
    <%= image_tag(image, width:100) %>
    <% end %>
    <% item.comments.each do |comment| %>
    <p class="comment-text"><%= comment.content %></p>
    <% end %>

    <%= link_to 'コメントする', new_comment_path(item_id: item.id) %>
    <%= link_to '削除', item, method: :delete, data: { confirm: '削除しますか？' } %>
    <%= link_to '編集', edit_item_path(current_user) %>


  </li>
  <% end %>
</ul>
